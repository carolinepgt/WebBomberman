{% extends "layout.html.twig" %}
{% block contenu %}
    <form method="post" action="{{ path('user.validFormlogin') }}">

        <div class="row">

            <fieldset>
                <input type="hidden"   name="_csrf_token"   value="{{ csrf_token('token') }}">
                <legend>Se connecter</legend>
                <label>Login :
                    <input name="login"  type="text"  size="18" value="" />
                </label>

                <label>Mot de passe :
                    <input name="motdepasse"  type="text"  size="18" value="" />
                </label>
                {% if app.session.get('erreur') is not empty %}
                    <small class="error">{{ app.session.get('erreur') }}</small>
                {% endif %}

                <input type="submit" name="seConnecter" value="Se connecter" />
	</fieldset>
</div>
</form>

{% endblock %}
